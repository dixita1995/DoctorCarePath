<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <layer-list>
            <item android:top="2dp" android:right="2dp">
                <shape>
                    <corners android:radius="50dp"/>
                    <solid android:color="#d6d6d6"/>
                </shape>
            </item>
            <item android:left="1dp" android:bottom="1dp">
                <shape>
                    <gradient android:startColor="#a57d42" android:endColor="#a57d42" android:angle="270"/>
                    <stroke android:width="1dp" android:color="#bababa"/>
                    <corners android:radius="50dp"/>
                    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
